<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:textStyle="bold"
        android:text="Misbah"
        android:id="@+id/directory_fav_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textColor="@color/text_color"
        android:textSize="16sp"/>

    <TextView
        android:layout_below="@+id/directory_fav_title"
        android:text="+49 179 5683154"
        android:layout_marginBottom="5dp"
        android:id="@+id/directory_fav_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"

        android:textSize="20sp" />

    <ImageButton
        android:layout_marginRight="20dp"
        android:background="#FFFFFF"
        android:layout_alignEnd="@id/directory_fav_name"
        android:layout_centerInParent="true"
        android:id="@+id/mensa_card_description"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/directory_fav_name"
        android:layout_marginEnd="20dp" />



</RelativeLayout>
