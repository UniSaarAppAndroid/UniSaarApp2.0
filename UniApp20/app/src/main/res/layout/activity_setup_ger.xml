<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"

    android:orientation="vertical"
    tools:context=".SetupActivity">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp">

        <ImageView
            android:id="@+id/iv_uni_saarbrucken"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/uni_saarbruecken" />

        <TextView
            android:id="@+id/tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_uni_saarbrucken"
            android:layout_centerHorizontal="true"
            android:text="Hallo"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_3"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="14dp"
            android:gravity="center"
            android:text="Herzlich Willkommen auf der offiziellen\n App der Universität des Saarlandes" />

        <TextView
            android:id="@+id/tv_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Wähle deinen Campus"
            android:textColor="@color/colorPrimaryDark" />


        <Button
            android:id="@+id/btn_saarbruecken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/button_border_with_color"
            android:text="Saarbrücken"
            android:textAllCaps="false"
            android:textColor="@color/viewBg"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_homburg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_saarbruecken"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/button_border"
            android:text="Homburg"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />


    </RelativeLayout>


</LinearLayout>