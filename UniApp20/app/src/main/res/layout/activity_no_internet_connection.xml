<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoInternetConnectionActivity">

    <ImageView
        android:id="@+id/iv_no_internet"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cloud_off_black_24dp"/>

    <TextView
        android:id="@+id/tv_no_internet"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_no_internet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/text_color"
        android:text="No internet connection available"/>
    <Button
        android:id="@+id/btn_no_internet"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tv_no_internet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:text="Retry"
        android:background="@drawable/button_border_with_color"/>
</RelativeLayout>